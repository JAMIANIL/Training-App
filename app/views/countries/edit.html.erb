<h1>Editing country</h1>

<%= form_with model: @country do |form| %>
    
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name %>
      <br/>
      <%= form.label :players_representing %>
      <%= form.number_field :players_representing %>
    </div>
  
    <div>
      <%= form.submit %>
    </div>
  <% end %>

<%= link_to 'Show', @country %> |
<%= link_to 'Back', countries_path %>

<%= form_with(model: Country) do |form| %>
  <% if @country.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@country.errors.count, "error") %> Country can't be saved:</h2>

      <ul>
        <% @country.errors.each do |error| %>
          <li class="class1"><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


<% end %>