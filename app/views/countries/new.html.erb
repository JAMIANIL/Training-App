<h1>Create Country</h1>

<%= form_with model: @country do |form| %>
    
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :players_representing %>
    <%= form.number_field :players_representing %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
