<%= form_with(model: Player) do |form| %>
  <% if @player.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@player.errors.count, "error") %> Player can't be saved:</h2>

      <ul>
        <% @player.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<h1>Player</h1>

<%= form_with model: @player do |form| %>
    
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :dob %>
    <%= form.datetime_select :dob %>
  </div>

  <div class="field">
    <%= form.label :matches %>
    <%= form.number_field :matches %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
<% end %>
