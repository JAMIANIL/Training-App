<h1>Editing Player</h1>

<%= form_with model: @player do |form| %>
    
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>
  
    <div class="field">
      <%= form.label :dob %>
      <%= form.datetime_select :dob %>
    </div>
  
    <div class="field">
      <%= form.label :matches %>
      <%= form.number_field :matches %>
    </div>

    <div class="field">
    <%= form.label :team %>
    <%= form.number_field :team_id %>
    </div>

    <div class="field">
    <%= form.label :country %>
    <%= form.number_field :country_id %>
    </div>


    <div>
      <%= form.submit %>
    </div>
  <% end %>
<%= link_to 'Show', @player %> |
<%= link_to 'Back', players_path %>
